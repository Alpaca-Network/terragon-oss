{
  "name": "@terragon/dev-env",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "exports": {
    "./test-global-setup": "./src/test-global-setup.ts"
  },
  "scripts": {
    "tunnel": "dotenv -e .env.development.local -- tsx scripts/tunnel.ts",
    "dev": "pnpm tunnel",
    "dev-setup": "pnpm docker-up-dev",
    "docker-up-dev": "docker compose --project-name=terragon-db up --remove-orphans -d",
    "docker-down-dev": "docker compose --project-name=terragon-db down",
    "docker-up-tests": "ENV=test POSTGRES_PORT=15432 REDIS_PORT=16379 REDIS_HTTP_PORT=18079 REDIS_HTTP_TOKEN=redis_test_token docker compose --project-name terragon-test up --remove-orphans -d --wait",
    "docker-down-tests": "ENV=test docker compose --project-name terragon-test down -v",
    "tsc-check": "tsc --noEmit",
    "tsc-watch": "tsc --noEmit --watch --preserveWatchOutput",
    "format": "prettier --write . --ignore-path ../../.prettierignore --config ../../.prettierrc",
    "format-check": "prettier --check . --ignore-path ../../.prettierignore --config ../../.prettierrc"
  },
  "packageManager": "pnpm@10.14.0",
  "dependencies": {
    "@ngrok/ngrok": "^1.7.0",
    "@terragon/env": "workspace:*"
  },
  "devDependencies": {
    "@terragon/tsconfig": "workspace:*",
    "@types/node": "24.0.1",
    "dotenv-cli": "^8.0.0",
    "npm": "^11.8.0",
    "tsx": "4.20.3",
    "typescript": "5.8.3"
  }
}
